<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Classwork_12._01._24_cookies_sessions_</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Classwork_12._01._24_cookies_sessions_.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-ajax-unobtrusive@3.2.6/dist/jquery.unobtrusive-ajax.min.js"></script>


    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function check() {
            var inputValue = document.getElementById("myinput").value;

            if (inputValue.trim() === "") {
                alert("Search field is empty!");
            } else {
                document.getElementById("searchform").submit();
            }
        }

        function handleCategoryChange() {
            var categorySelect = document.getElementById("category");
            var inputField = document.getElementById("myinput");

            if (categorySelect.value === "0") {
                inputField.disabled = true;
            } else {
                inputField.disabled = false;
            }
        }

        function checkAmount(){
            var enteredAmount = document.getElementById("enteredAmount").value;
            var allowedAmount = document.getElementById("displayValue").innerText;
            if (parseInt(enteredAmount) > parseInt(allowedAmount)) {
                alert("Entered value is higher than available on stock!")
                document.getElementById("enteredAmount").value = "";
            }else{
                const modalContainer = document.getElementById("modalContainer");
                modalContainer.style.display = "flex";
            }
        }

        function closeModal(){
            document.getElementById("amountform").submit();
            const modalContainer = document.getElementById("modalContainer");
            modalContainer.style.display = "none";
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)

    <div class="modal-container" id="modalContainer">
        <div class="modal-content">
            <p>Form submitted successfully!</p>
            <button class="continue-btn" onclick="closeModal()">Continue</button>
        </div>
    </div>
</body>
</html>
